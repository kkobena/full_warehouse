<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Sunmi Printer Permissions -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />

    <!-- Optional: For external printers via USB -->
    <uses-feature android:name="android.hardware.usb.host" android:required="false" />

    <application
        android:name=".PharmaSmartApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_pharma_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_pharma_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.PharmaSmart"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Splash Screen Activity -->
        <activity
            android:name=".ui.activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.PharmaSmart.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".ui.activity.LoginActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main/Sales Activity -->
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="false"
            android:screenOrientation="fullSensor" />

        <!-- Sales Home Activity (Ongoing Sales List) - Main Screen -->
        <activity
            android:name=".ui.activity.SalesHomeActivity"
            android:exported="false"
            android:label="@string/sales_home_title" />

        <!-- Comptant Sale Activity (POS Screen) -->
        <activity
            android:name=".ui.activity.ComptantSaleActivity"
            android:exported="false"
            android:label="@string/comptant_sale_title"
            android:parentActivityName=".ui.activity.SalesHomeActivity"
            android:windowSoftInputMode="adjustResize" />

        <!-- Sale Detail Activity (View Sale Details) -->
        <activity
            android:name=".ui.activity.SaleDetailActivity"
            android:exported="false"
            android:label="DÃ©tail de la vente"
            android:parentActivityName=".ui.activity.SalesHomeActivity" />

    </application>

</manifest>
